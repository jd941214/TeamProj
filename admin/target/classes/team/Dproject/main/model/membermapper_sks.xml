<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="team.Dproject.main.model">

	<select id="checkMember_sks" parameterType="java.util.Map" resultType="memberDTO_sks"> 
	<!-- parameterType=받아오는거(?값 #{???})  resultType=내보내는 값(여기서 내보내는 값)-->
		select * from member where ssn1=#{ssn1} and ssn2=#{ssn2} 
	</select>
	
	<insert id="insertMember_sks" parameterType="memberDTO_sks">
		insert into member values(member_seq.nextval,
		#{name},#{id},#{passwd},#{ssn1},#{ssn2},#{email},#{hp1},#{hp2},#{hp3},#{position},#{sex},#{point},sysdate)
	</insert>
	
	
	<select id="listMember_sks" resultType="memberDTO_sks">
		select * from member
	</select>
	
	<select id="getMember_sks" resultType="memberDTO_sks" parameterType="int">
		select * from member where member_no = #{member_no}
	</select>
	
	<select id = "getMember1_sks" parameterType = "String" resultType ="memberDTO_sks">
		select * from member where id = #{id}
	</select>
	<select id = "getMemberPasswd_sks" parameterType = "String" resultType = "String">
		select passwd from member where id = #{id}
	</select>

</mapper>